        "/register": {
            "post": {
                "tags": [
                    "Autenticación"
                ],
                "summary": "Registrar nuevo usuario",
                "description": "Registra un nuevo usuario en el sistema y devuelve un token de autenticación",
                "operationId": "register",
                "requestBody": {
                    "description": "Datos del nuevo usuario",
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "required": [
                                    "nombre",
                                    "apellido",
                                    "email",
                                    "password",
                                    "rol_id"
                                ],
                                "properties": {
                                    "nombre": {
                                        "type": "string",
                                        "maxLength": 100,
                                        "example": "Pedro"
                                    },
                                    "apellido": {
                                        "type": "string",
                                        "maxLength": 100,
                                        "example": "Garcia"
                                    },
                                    "email": {
                                        "type": "string",
                                        "format": "email",
                                        "maxLength": 150,
                                        "example": "pedro.garcia@example.com"
                                    },
                                    "password": {
                                        "type": "string",
                                        "format": "password",
                                        "minLength": 6,
                                        "example": "password123"
                                    },
                                    "rol_id": {
                                        "type": "integer",
                                        "example": 1
                                    },
                                    "provincia_id": {
                                        "type": "integer",
                                        "example": 1,
                                        "nullable": true
                                    },
                                    "ciudad_id": {
                                        "type": "integer",
                                        "example": 1,
                                        "nullable": true
                                    },
                                    "descripcion": {
                                        "type": "string",
                                        "maxLength": 255,
                                        "example": "Usuario de prueba",
                                        "nullable": true
                                    },
                                    "horas_saldo": {
                                        "type": "integer",
                                        "example": 5,
                                        "nullable": true
                                    },
                                    "valoracion": {
                                        "type": "integer",
                                        "example": 0,
                                        "nullable": true
                                    }
                                },
                                "type": "object"
                            }
                        }
                    }
                },
                "responses": {
                    "201": {
                        "description": "Usuario registrado exitosamente",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "message": {
                                            "type": "string",
                                            "example": "¡Usuario registrado exitosamente!"
                                        },
                                        "access_token": {
                                            "type": "string",
                                            "example": "1|abcdef123456..."
                                        },
                                        "token_type": {
                                            "type": "string",
                                            "example": "Bearer"
                                        },
                                        "user": {
                                            "properties": {
                                                "id": {
                                                    "type": "integer",
                                                    "example": 1
                                                },
                                                "nombre": {
                                                    "type": "string",
                                                    "example": "Pedro"
                                                },
                                                "apellido": {
                                                    "type": "string",
                                                    "example": "Garcia"
                                                },
                                                "email": {
                                                    "type": "string",
                                                    "example": "pedro.garcia@example.com"
                                                },
                                                "rol_id": {
                                                    "type": "integer",
                                                    "example": 1
                                                },
                                                "provincia_id": {
                                                    "type": "integer",
                                                    "example": 1
                                                },
                                                "ciudad_id": {
                                                    "type": "integer",
                                                    "example": 1
                                                },
                                                "descripcion": {
                                                    "type": "string",
                                                    "example": "Usuario de prueba"
                                                },
                                                "horas_saldo": {
                                                    "type": "integer",
                                                    "example": 5
                                                },
                                                "valoracion": {
                                                    "type": "integer",
                                                    "example": 0
